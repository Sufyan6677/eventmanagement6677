  GoRoute( path: '/homeprofile', parentNavigatorKey: _shellNavigatorKey, 
  builder: (context, state) { return HomeProfile(); }, 
  routes: [ GoRoute( path: '/homeprofiledetails', parentNavigatorKey: _rootNavigatorKey, builder: (context, state) 
  { return HomeProfileDetails(); }, ), ], ), ], ), ], ); 
  class maina extends StatelessWidget { maina({super.key}); @override Widget build(BuildContext context) { return MaterialApp.router( routerConfig: router, 
  initialRoute: MainHomePage.id, 
  routes: { 
