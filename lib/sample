     builder: (context, state) { 
      return HomeProfile(); 
      },  ), 
  GoRoute( path: '/signup', builder: (BuildContext context, GoRouterState state) { return const Signupa(); }, ), 
  ShellRoute( navigatorKey: _shellNavigatorKey, builder: (context, state, child) { return MainHomePage(child: child); }, 
  routes: [ GoRoute( path: '/homepagecontent', parentNavigatorKey: _shellNavigatorKey, builder: (context, state) { return MainHomePageContent(); }, ),
  GoRoute( path: '/homepage', parentNavigatorKey: _shellNavigatorKey,
  builder: (context, state) { return MainHomePage(); }, ),
  GoRoute( path: '/homecourses', parentNavigatorKey: _shellNavigatorKey,
  builder: (context, state) { return HomeCourse(); }, ), 
  GoRoute( path: '/homesettings', parentNavigatorKey: _shellNavigatorKey,
